{
  "name": "postscriptsnippets",
  "displayName": "PostScript Programming Language",
  "publisher": "yingquelou",
  "description": "PostScript GhostScript OptScript",
  "version": "1.0.4",
  "engines": {
    "vscode": "^1.70.3"
  },
  "activationEvents": [],
  "categories": [
    "Snippets",
    "Programming Languages",
    "Debuggers"
  ],
  "main": "dist/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "PostScript Configuration",
        "properties": {
          "postscript.interpreter.executable": {
            "description": "PostScript interpreter executable path",
            "type": "string",
            "default": "gs"
          }
        }
      }
    ],
    "configurationDefaults": {
      "postscript.interpreter.executable": "gs"
    },
    "grammars": [
      {
        "language": "postscript",
        "scopeName": "source.postscript",
        "path": "./language/postscript.tmLanguage.json"
      }
    ],
    "breakpoints": [
      {
        "language": "postscript"
      }
    ],
    "languages": [
      {
        "id": "postscript",
        "extensions": [
          ".ps",
          ".eps"
        ],
        "aliases": [
          "PostScript",
          "GhostScript",
          "OptScript"
        ],
        "configuration": "./language/language-configuration.json"
      }
    ],
    "snippets": [
      {
        "language": "postscript",
        "path": "snippets/Operand Stack Manipulation Operators.json"
      },
      {
        "language": "postscript",
        "path": "snippets/Arithmetic and Math Operators.json"
      },
      {
        "language": "postscript",
        "path": "snippets/Array Operators.json"
      },
      {
        "language": "postscript",
        "path": "snippets/Packed Array Operators.json"
      },
      {
        "language": "postscript",
        "path": "snippets/Dictionary Operators.json"
      },
      {
        "language": "postscript",
        "path": "snippets/String Operators.json"
      },
      {
        "language": "postscript",
        "path": "snippets/Relational,Boolean,and Bitwise Operators.json"
      },
      {
        "language": "postscript",
        "path": "snippets/Control Operators.json"
      },
      {
        "language": "postscript",
        "path": "snippets/Type,Attribute,and Conversion Operators.json"
      },
      {
        "language": "postscript",
        "path": "snippets/File Operators.json"
      },
      {
        "language": "postscript",
        "path": "snippets/Resource Operators.json"
      },
      {
        "language": "postscript",
        "path": "snippets/Virtual Memory Operators.json"
      },
      {
        "language": "postscript",
        "path": "snippets/Miscellaneous Operators.json"
      },
      {
        "language": "postscript",
        "path": "snippets/Graphics State Operators (Device-Independent).json"
      },
      {
        "language": "postscript",
        "path": "snippets/Graphics State Operators (Device-Dependent).json"
      },
      {
        "language": "postscript",
        "path": "snippets/Coordinate System and Matrix Operators.json"
      },
      {
        "language": "postscript",
        "path": "snippets/Path Construction Operators.json"
      },
      {
        "language": "postscript",
        "path": "snippets/Painting Operators.json"
      },
      {
        "language": "postscript",
        "path": "snippets/Insideness-Testing Operators.json"
      },
      {
        "language": "postscript",
        "path": "snippets/Form and Pattern Operators.json"
      },
      {
        "language": "postscript",
        "path": "snippets/Device Setup and Output Operators.json"
      },
      {
        "language": "postscript",
        "path": "snippets/Glyph and Font Operators.json"
      },
      {
        "language": "postscript",
        "path": "snippets/Interpreter Parameter Operators.json"
      },
      {
        "language": "postscript",
        "path": "snippets/Errors.json"
      }
    ],
    "debuggers": [
      {
        "type": "postscript",
        "label": "PostScript (Ghostscript) Debugger",
        "program": "./dist/debugAdapter.js",
        "runtime": "node",
        "languages": [
          "postscript"
        ],
        "configurationAttributes": {
          "launch": {
            "properties": {
              "program": {
                "type": "string",
                "description": "PostScript file to run"
              },
              "ghostscriptPath": {
                "type": "string",
                "description": "Path to Interpreter executable (eg. gs/gswin32c/gswin64c)"
              }
            }
          }
        },
        "configurationSnippets": [
          {
            "label": "Launch PostScript (Ghostscript)",
            "body": {
              "type": "postscript",
              "request": "launch",
              "name": "Launch PostScript (Ghostscript)",
              "program": "${file}",
              "ghostscriptPath": "gs"
            }
          }
        ]
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yingquelou/Postscript-Snippets.git"
  },
  "scripts": {
    "prepublish": "npm run package",
    "prepackage": "npm run compile && npm run snippets",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "publish": "vsce publish",
    "package": "vsce package",
    "snippets": "node ./dist/snippetsGenerator.s.js"
  },
  "dependencies": {
    "chevrotain": "10.5.0",
    "@vscode/debugadapter": "^1.68.0",
    "@vscode/debugprotocol": "^1.68.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.66.0",
    "@vscode/vsce": "^2.32.0",
    "marked": "^17.0.1",
    "typescript": "^5.9.3"
  }
}